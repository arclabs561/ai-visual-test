#!/usr/bin/env sh
# Husky v9+ doesn't need the husky.sh sourcing

# Hookwise - LLM-powered commit message validation (optional, skip if not installed)
if [ -f "node_modules/@arclabs561/hookwise/src/hooks/commit-msg.mjs" ]; then
  node node_modules/@arclabs561/hookwise/src/hooks/commit-msg.mjs "$1" || true
fi
