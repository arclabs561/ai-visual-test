{
  "name": "ai-browser-test",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arclabs561/ai-browser-test.git"
  },
  "homepage": "https://github.com/arclabs561/ai-browser-test#readme",
  "bugs": {
    "url": "https://github.com/arclabs561/ai-browser-test/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/arclabs561"
  },
  "version": "0.3.1",
  "description": "AI-powered visual testing using Vision Language Models (VLLM) for screenshot validation with Playwright. Semantic visual regression testing that understands UI meaning, not just pixels.",
  "type": "module",
  "main": "src/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": "./src/index.mjs",
    "./judge": "./src/judge.mjs",
    "./multi-modal": "./src/multi-modal.mjs",
    "./temporal": "./src/temporal.mjs",
    "./cache": "./src/cache.mjs",
    "./config": "./src/config.mjs",
    "./load-env": "./src/load-env.mjs",
    "./persona-experience": "./src/persona-experience.mjs",
    "./logger": "./src/logger.mjs"
  },
  "files": [
    "src/**/*.mjs",
    "index.d.ts",
    "api/**/*.js",
    "public/**/*.html",
    "vercel.json",
    "README.md",
    "CHANGELOG.md",
    "DEPLOYMENT.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "example.test.mjs",
    "docs/SECURITY_RED_TEAM_REPORT.md",
    "SECURITY.md",
    ".secretsignore.example"
  ],
  "scripts": {
    "test": "node --test test/*.test.mjs",
    "test:watch": "node --test --watch test/*.test.mjs",
    "test:coverage": "node --test test/*.test.mjs",
    "docs": "node scripts/generate-docs.mjs",
    "docs:watch": "node scripts/generate-docs.mjs && chokidar 'src/**/*.mjs' -c 'npm run docs'",
    "docs:typedoc": "typedoc",
    "prepare": "husky install || true"
  },
  "keywords": [
    "browser-testing",
    "playwright",
    "vllm",
    "vision-language-model",
    "multi-modal-validation",
    "persona-testing",
    "ai-testing",
    "visual-testing",
    "screenshot-validation",
    "accessibility",
    "e2e-testing"
  ],
  "author": "arclabs561 <henry@henrywallace.io>",
  "license": "MIT",
  "peerDependencies": {
    "@arclabs561/llm-utils": "*",
    "@playwright/test": "^1.56.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    },
    "@arclabs561/llm-utils": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "playwright": "1.56.1",
    "typedoc": "0.28.14",
    "typescript": "5.9.3"
  }
}
